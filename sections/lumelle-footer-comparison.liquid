{% comment %}
  Lumelle Footer Comparison - Shows BOTH React and Liquid footers side by side
  For testing pixel-perfect replication
{% endcomment %}

<div class="lumelle-footer-comparison">
  
  {%- comment -%} REACT FOOTER (Original) {%- endcomment -%}
  <div class="footer-comparison-react" style="border-bottom: 4px solid #3B82F6; padding-bottom: 20px;">
    <div style="background: #3B82F6; color: white; padding: 8px 16px; font-size: 12px; font-weight: bold; text-transform: uppercase; letter-spacing: 0.1em;">
      ðŸ”µ REACT FOOTER (302KB bundle)
    </div>
    <div id="react-footer"></div>
  </div>
  
  {%- comment -%} LIQUID FOOTER (Pixel-Perfect Copy) {%- endcomment -%}
  <div class="footer-comparison-liquid" style="border-bottom: 4px solid #22C55E;">
    <div style="background: #22C55E; color: white; padding: 8px 16px; font-size: 12px; font-weight: bold; text-transform: uppercase; letter-spacing: 0.1em;">
      ðŸŸ¢ LIQUID FOOTER (12KB - Pure Liquid + Vanilla JS)
    </div>
    
    <footer
      class="border-t border-semantic-legacy-brand-blush/30 bg-gradient-to-b from-semantic-legacy-brand-blush/20 to-semantic-legacy-brand-blush/30 text-semantic-text-primary"
      data-sticky-buy-target
    >
      <div class="mx-auto max-w-6xl px-5 py-14 md:px-6">
        
        {%- comment -%} Centered Logo & Brand Section {%- endcomment -%}
        <div class="flex flex-col items-center space-y-4 text-center">
          <img src="{{ 'l-icon.svg' | asset_url }}" alt="Lumelle" class="h-12 w-12" width="48" height="48">
          <p class="font-heading text-2xl font-semibold uppercase tracking-[0.28em]">Lumelle</p>
          <p class="max-w-md text-sm text-semantic-text-primary/75">
            Creator-grade shower caps that keep silk presses, curls, and braids flawless on camera.
          </p>
          <div class="inline-flex items-center gap-2 rounded-full bg-white/80 px-3 py-1 text-[11px] font-semibold uppercase tracking-[0.22em] text-semantic-text-primary shadow-soft ring-1 ring-semantic-accent-cta/50">
            Made in UK â€¢ 30-day returns
          </div>
        </div>

        {%- comment -%} Links Grid {%- endcomment -%}
        <div class="mt-16 grid gap-x-16 gap-y-12 grid-cols-2 lg:grid-cols-3">
          
          {%- comment -%} Explore Column {%- endcomment -%}
          <div class="space-y-4 text-center">
            <div class="grid grid-cols-1 gap-3 text-sm text-semantic-text-primary/80">
              <a href="{{ routes.all_products_collection_url }}" class="group inline-flex items-center justify-center gap-2 transition-all hover:text-semantic-text-primary">
                <svg class="h-4 w-4 transition-transform group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                  <line x1="3" y1="6" x2="21" y2="6"></line>
                  <path d="M16 10a4 4 0 0 1-8 0"></path>
                </svg>
                <span>Shop</span>
              </a>
              <a href="/pages/brand-story" class="group inline-flex items-center justify-center gap-2 transition-all hover:text-semantic-text-primary">
                <svg class="h-4 w-4 transition-transform group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <span>Brand Story</span>
              </a>
              <a href="/blogs/{{ settings.blog_default | default: 'news' }}" class="group inline-flex items-center justify-center gap-2 transition-all hover:text-semantic-text-primary">
                <svg class="h-4 w-4 transition-transform group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"></path>
                  <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"></path>
                </svg>
                <span>Blog</span>
              </a>
            </div>
          </div>

          {%- comment -%} Support Column {%- endcomment -%}
          <div class="space-y-4 text-center">
            <div class="grid grid-cols-1 gap-3 text-sm text-semantic-text-primary/80">
              <a href="/pages/faq" class="group inline-flex items-center justify-center gap-2 transition-all hover:text-semantic-text-primary">
                <svg class="h-4 w-4 transition-transform group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                </svg>
                <span>FAQ</span>
              </a>
              <a href="/pages/shipping" class="group inline-flex items-center justify-center gap-2 transition-all hover:text-semantic-text-primary">
                <svg class="h-4 w-4 transition-transform group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="1" y="3" width="15" height="13"></rect>
                  <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
                </svg>
                <span>Shipping &amp; Returns</span>
              </a>
              <a href="mailto:{{ section.settings.support_email }}" class="group inline-flex items-center justify-center gap-2 transition-all hover:text-semantic-text-primary">
                <svg class="h-4 w-4 transition-transform group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <span>Contact</span>
              </a>
            </div>
          </div>

          {%- comment -%} Newsletter Column {%- endcomment -%}
          <div class="col-span-2 space-y-4 text-center lg:col-span-1 lg:text-left">
            <form
              id="lumelle-newsletter-comparison-{{ section.id }}"
              aria-label="Newsletter signup"
              class="w-full max-w-sm mx-auto lg:mx-0"
            >
              <div class="flex items-center gap-2 rounded-full border border-semantic-accent-cta/70 bg-white/85 px-3 py-1.5 text-sm font-semibold text-semantic-text-primary shadow-soft transition-shadow focus-within:shadow-md">
                <input
                  type="email"
                  inputmode="email"
                  autocomplete="email"
                  required
                  placeholder="Email for updates"
                  class="w-full bg-transparent text-sm font-semibold text-semantic-text-primary outline-none placeholder:text-semantic-text-primary/50"
                  name="email"
                >
                <button
                  type="submit"
                  class="inline-flex shrink-0 items-center gap-1.5 rounded-full bg-semantic-legacy-brand-cocoa px-3 py-1 text-xs font-semibold text-white shadow-soft transition-all hover:-translate-y-0.5 hover:shadow-md active:translate-y-0 disabled:cursor-not-allowed disabled:opacity-60"
                >
                  <span class="submit-text">Join</span>
                  <span aria-hidden class="text-xs">â†’</span>
                </button>
              </div>
              <p class="mt-2 text-xs hidden newsletter-message" aria-live="polite"></p>
            </form>
            
            {%- comment -%} Social Icons {%- endcomment -%}
            <div class="flex items-center justify-center gap-3 text-sm text-semantic-text-primary/80 lg:justify-start">
              <a
                href="{{ section.settings.instagram_url }}"
                target="_blank"
                rel="noreferrer"
                class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-semantic-accent-cta/50 bg-white/85 text-semantic-text-primary transition-all hover:-translate-y-0.5 hover:bg-semantic-accent-cta/20 hover:text-semantic-text-primary hover:shadow-md shadow-soft"
                aria-label="Instagram"
              >
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                  <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                </svg>
              </a>
              <a
                href="{{ section.settings.tiktok_url }}"
                target="_blank"
                rel="noreferrer"
                class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-semantic-accent-cta/50 bg-white/85 text-semantic-text-primary transition-all hover:-translate-y-0.5 hover:bg-semantic-accent-cta/20 hover:text-semantic-text-primary hover:shadow-md shadow-soft"
                aria-label="TikTok"
              >
                <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M9 12a4 4 0 1 0 4 4V4a5 5 0 0 0 5 5"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        {%- comment -%} Bottom Bar {%- endcomment -%}
        <div class="mt-12 border-t border-semantic-legacy-brand-blush/40 pt-8">
          <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
            <p class="text-xs text-semantic-text-primary/60">
              Â© {{ 'now' | date: '%Y' }} Lumelle. All rights reserved.
            </p>
            <div class="flex items-center gap-4 text-xs text-semantic-text-primary/60">
              <a href="/pages/terms" class="transition hover:text-semantic-text-primary">
                Terms
              </a>
              <span>â€¢</span>
              <a href="/pages/privacy" class="transition hover:text-semantic-text-primary">
                Privacy
              </a>
            </div>
            <button
              onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
              class="rounded-full border border-semantic-legacy-brand-blush/60 bg-white/80 p-2 text-semantic-text-primary transition-all hover:bg-semantic-accent-cta/20 hover:-translate-y-0.5 shadow-sm hover:shadow-md"
              aria-label="Back to top"
            >
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="h-4 w-4">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 15.75l7.5-7.5 7.5 7.5" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </footer>
  </div>
  
</div>

{% schema %}
{
  "name": "Lumelle Footer Comparison",
  "tag": "section",
  "class": "section-lumelle-footer-comparison",
  "settings": [
    {
      "type": "text",
      "id": "support_email",
      "label": "Support Email",
      "default": "hello@lumellebeauty.co.uk"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
      "default": "https://instagram.com/lumellebeauty"
    },
    {
      "type": "url",
      "id": "tiktok_url",
      "label": "TikTok URL",
      "default": "https://tiktok.com/@lumellebeauty"
    }
  ],
  "presets": [
    {
      "name": "Lumelle Footer Comparison"
    }
  ]
}
{% endschema %}
