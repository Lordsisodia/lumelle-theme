{% comment %}
  Lumelle Reviews Section - React version
{% endcomment %}

<div id="react-reviews"></div>

{%- style -%}
.lumelle-reviews {
    background: #FFFFFF;
    padding: 80px 20px;
  }

  .lumelle-reviews__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .lumelle-reviews__header {
    text-align: center;
    margin-bottom: 50px;
  }

  .lumelle-reviews__title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 42px;
    font-weight: 600;
    color: #55362A;
    margin: 0 0 12px;
  }

  .lumelle-reviews__subtitle {
    font-size: 18px;
    color: #55362A;
    opacity: 0.7;
  }

  .lumelle-reviews__stars {
    color: #55362A;
    font-size: 24px;
    letter-spacing: 4px;
    margin-bottom: 8px;
  }

  .lumelle-reviews__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .lumelle-reviews__card {
    background: #FFFFFF;
    border: 1px solid #FDD4DC;
    border-radius: 16px;
    padding: 24px;
  }

  .lumelle-reviews__card-stars {
    color: #55362A;
    font-size: 16px;
    letter-spacing: 2px;
    margin-bottom: 12px;
  }

  .lumelle-reviews__card-text {
    font-size: 15px;
    color: #55362A;
    line-height: 1.6;
    margin: 0 0 16px;
  }

  .lumelle-reviews__card-author {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .lumelle-reviews__card-avatar {
    width: 40px;
    height: 40px;
    background: #FBC7B2;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    color: #55362A;
    font-size: 14px;
  }

  .lumelle-reviews__card-name {
    font-size: 14px;
    font-weight: 600;
    color: #55362A;
  }

  .lumelle-reviews__card-verified {
    font-size: 12px;
    color: #55362A;
    opacity: 0.6;
  }

  @media (max-width: 900px) {
    .lumelle-reviews__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .lumelle-reviews__grid {
      grid-template-columns: 1fr;
    }

    .lumelle-reviews__title {
      font-size: 32px;
    }
  }
{%- endstyle -%}

<section class="lumelle-reviews">
  <div class="lumelle-reviews__container">
    <div class="lumelle-reviews__header">
      <div class="lumelle-reviews__stars">★★★★★</div>
      <h2 class="lumelle-reviews__title">{{ section.settings.title | default: 'Loved by thousands' }}</h2>
      <p class="lumelle-reviews__subtitle">{{ section.settings.subtitle | default: 'Join 1000+ happy customers' }}</p>
    </div>
    
    <div class="lumelle-reviews__grid">
      {% for i in (1..6) %}
        <div class="lumelle-reviews__card">
          <div class="lumelle-reviews__card-stars">★★★★★</div>
          <p class="lumelle-reviews__card-text">
            {% case i %}
              {% when 1 %}{{ section.settings.review_1 | default: "Best shower cap I've ever used! Keeps my silk press completely dry." }}
              {% when 2 %}{{ section.settings.review_2 | default: 'Game changer for my curly hair routine. No more frizz!' }}
              {% when 3 %}{{ section.settings.review_3 | default: 'Finally a shower cap that actually works. Worth every penny.' }}
              {% when 4 %}{{ section.settings.review_4 | default: 'Love the satin lining - so gentle on my hair.' }}
              {% when 5 %}{{ section.settings.review_5 | default: 'Reusable and easy to clean. Much better for the environment.' }}
              {% when 6 %}{{ section.settings.review_6 | default: 'Perfect fit, stays in place, and keeps my braids protected.' }}
            {% endcase %}
          </p>
          <div class="lumelle-reviews__card-author">
            <div class="lumelle-reviews__card-avatar">
              {% case i %}
                {% when 1 %}S
                {% when 2 %}M
                {% when 3 %}J
                {% when 4 %}A
                {% when 5 %}R
                {% when 6 %}K
              {% endcase %}
            </div>
            <div>
              <div class="lumelle-reviews__card-name">
                {% case i %}
                  {% when 1 %}{{ section.settings.author_1 | default: 'Sarah M.' }}
                  {% when 2 %}{{ section.settings.author_2 | default: 'Michelle K.' }}
                  {% when 3 %}{{ section.settings.author_3 | default: 'Jessica R.' }}
                  {% when 4 %}{{ section.settings.author_4 | default: 'Amanda L.' }}
                  {% when 5 %}{{ section.settings.author_5 | default: 'Rachel T.' }}
                  {% when 6 %}{{ section.settings.author_6 | default: 'Kylie P.' }}
                {% endcase %}
              </div>
              <div class="lumelle-reviews__card-verified">Verified buyer</div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

